@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container" >
    @foreach (var item in Model.Cuentas)
    {
        <div class="container" style="margin-top: 1%">
            <div class="d-flex justify-content-center">
                <div class="row" style="width:20%">
                    <div class="card" style="border-color:orange">
                        <div class="card-body">
                            <div class="col">Cuenta No. @item.NumeroCuenta</div>
                            <div class="col">Balance: @item.Balace</div>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
    }
</div>